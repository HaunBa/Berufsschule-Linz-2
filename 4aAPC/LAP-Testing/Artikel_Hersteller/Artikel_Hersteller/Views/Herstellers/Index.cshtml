@model IEnumerable<Artikel_Hersteller.Models.Hersteller>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

    <!-- SUCHFUNKTION -->
<div>
<form asp-action="Index" method="get">
    <div class="form-group" style="width: 20%">
        <input class="form-control" type="text" name="search" />
    </div>
    <div>
        <input class="btn btn-primary" style="width: 5%" type="submit" value="Filter" />
    </div>
</form>
</div>

    <!-- ENDE SUCHFUNKTION -->

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arts.Count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arts.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
